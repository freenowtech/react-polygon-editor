{
    "name": "@freenow/react-polygon-editor",
    "version": "1.1.0",
    "description": "A react component for displaying and drawing geo polygons",
    "main": "dist/index.js",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "start": "start-storybook -p 9001 -c .storybook",
        "lint": "tslint ./src/**/*.{ts,tsx}",
        "clean": "rm -rf ./dist ./node_modules",
        "build": "tsc",
        "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
        "prepublishOnly": "rm -rf ./dist && npm test && npm run lint && npm run build"
    },
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/freenowtech/react-polygon-editor.git"
    },
    "keywords": [
        "leaflet",
        "react"
    ],
    "author": "m.gharsallah",
    "license": "Apache-2.0",
    "prettier": {
        "printWidth": 120,
        "singleQuote": true,
        "tabWidth": 4
    },
    "peerDependencies": {
        "leaflet": "1.x",
        "react": ">=16.8.0",
        "react-dom": ">=16.8.0",
        "react-leaflet": ">=2",
        "styled-components": ">=4"
    },
    "dependencies": {
        "@mapbox/geojson-rewind": "^0.4.0",
        "@mapbox/geojsonhint": "^3.0.0",
        "clipboard-polyfill": "^2.8.6",
