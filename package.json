        "@types/storybook__react": "^4.0.2",
        "@types/styled-components": "^4.1.19",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.0.6",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.15.1",
        "enzyme-to-json": "^3.4.3",
        "jest": "^25.1.0",
        "jest-styled-components": "^7.0.0",
        "leaflet": "^1.5.1",
        "prettier": "^1.19.1",
        "react": "^16.10.2",
        "react-dom": "^16.10.2",
        "react-leaflet": "^2.5.0",
        "styled-components": "^5.0.1",
        "ts-jest": "^25.2.1",
        "tslint": "^5.20.0",
        "tslint-loader": "^3.5.4",
        "tslint-react": "^4.1.0",
        "typescript": "^3.8.2"
    }
